<configuration>
   <property>
     <name>javax.jdo.option.ConnectionURL</name>
     <value>jdbc:derby:;databaseName=/opt/spark/warehouse/metastore_db;create=true</value>
   </property>
   <property>
     <name>javax.jdo.option.ConnectionDriverName</name>
     <value>org.apache.derby.jdbc.EmbeddedDriver</value>
   </property>
   <property>
      <name>hive.metastore.warehouse.dir</name>
      <value>/opt/spark/warehouse/</value>
   </property>
   <property>
     <name>hive.metastore.schema.verification</name>
     <value>false</value>
   </property>
   <property>
     <name>hive.metastore.schema.version</name>
     <value>2.3.0</value>
   </property>
   <property>
     <name>hive.stats.jdbc.timeout</name>
     <value>30</value>
   </property>
   <property>
     <name>hive.stats.retries.wait</name>
     <value>3000</value>
   </property>
</configuration>


